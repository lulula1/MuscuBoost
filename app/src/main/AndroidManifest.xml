<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uqac.dim.muscuboost">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScheduleActivity"
            android:label="@string/schedule_name"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".TrainingShowcaseActivity"
            android:label="@string/training_showcase_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TrainActivity"
            android:label="@string/train_name"
            android:launchMode="singleTask" />

        <service android:name=".TrainService" />
        <service
            android:name=".MonService"
            android:enabled="true"
            android:exported="true"></service>
        <activity android:name=".Chronometre"
            android:label="Chronometer"
            android:screenOrientation="portrait"/>
        <activity android:name=".AjoutExercice.AddExerciceActivity"
            android:label="Add exercise"
            android:screenOrientation="portrait"/>
        <activity android:name=".AjoutExercice.ListeExerciseFragment"
            android:label="Exercises"></activity>
        <activity android:name=".AjoutExercice.DetailExerciseActivity"></activity>
    </application>


</manifest>