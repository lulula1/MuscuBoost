<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="schedule"></style>

    <style name="schedule.header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_span">2</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="schedule.data">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="schedule.data.time">
        <item name="android:width">128dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:letterSpacing">-.05</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="schedule.data.label">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">24sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="schedule.data.empty">
        <item name="android:layout_span">2</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
